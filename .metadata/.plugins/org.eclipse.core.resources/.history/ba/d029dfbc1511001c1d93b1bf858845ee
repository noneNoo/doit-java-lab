package chapter4;

public class Quiz4 {

	public static void main(String[] args) {
		int floor = 5;
		// 4층짜리 피라미드 찍기
		for(int i = 0; i < floor; i++) {
			for(int k = i; k < 4; k++) {
				System.out.print("  ");
			}
			for(int j = 0; j < i; j++) {
				if(j == 0) {
					System.out.print("* ");
				} else {
				System.out.print("* * ");
				}
			}
		}
		
		for(int i = 0; i < floor; i++) {
			for(int j = 0; j < i; j++) {
				System.out.print(" * ");
			}

			System.out.println();
		}
	}

}
