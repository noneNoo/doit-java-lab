package chapter4;

public class Quiz4 {

	public static void main(String[] args) {
		// 4층짜리 피라미드 찍기
		char space = ' ';
		for(int i = 0; i < 5; i++) {

			for(int k = 0; k > 5; k++) {
				System.out.print(k);
			}
			for(int j = 0; j < i; j++) {
				System.out.print("*");
			}
			System.out.println();
		}
	}

}
