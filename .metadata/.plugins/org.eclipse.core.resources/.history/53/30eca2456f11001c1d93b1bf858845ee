package chapter4;

public class Quiz4 {

	public static void main(String[] args) {
		final int MAX_FLOOR = 5;
		int starCount = 0;
		// 4층짜리 피라미드 찍기
		for(int i = 1; i < MAX_FLOOR; i++) {
			for(int k = i; k < MAX_FLOOR; k++) {
				System.out.print("  ");
			}
			for(int j = 0; j < i; j++) {
				if(j == 0) {
					System.out.print("* ");
					starCount += 1;
				} else {
				System.out.print("* * ");
				starCount += 2;
				}
			}
			System.out.println();

			// 여기서부터 줄어들기 시작
			if (i == MAX_FLOOR - 1) {
//				System.out.println("새로운 줄: " + i);
				for(int down = i; down > 0; down --) {

					for(int h = 0; h < down; h++) {
						System.out.print("* * ");
					} 
					for(int k = 0; k < MAX_FLOOR; k++) {
						System.out.print("-");
					}
					System.out.println();
				}
			}
			
		}
		
	}

}
