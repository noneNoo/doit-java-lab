package chapter4;

public class Quiz4 {

	public static void main(String[] args) {
		int floor = 5;
		// 4ÃþÂ¥¸® ÇÇ¶ó¹Ìµå Âï±â
		for(int i = 1; i < floor; i++) {
			for(int k = i; k < floor; k++) {
				System.out.print("  ");
			}
			for(int j = 0; j < i; j++) {
				if(j == 0) {
					System.out.print("* ");
				} else {
				System.out.print("* * ");
				}
			}
			System.out.println();
		}
		
		for(int i = 1; i < floor; i++) {
			if(i == 1) {
				continue;
			}
			for(int k = 1; k < i; k++) {
				System.out.print("  ");
			}
			for(int j = i; j > i; j--) {
				System.out.print(j);
			}
			System.out.println();
		}
	}

}
