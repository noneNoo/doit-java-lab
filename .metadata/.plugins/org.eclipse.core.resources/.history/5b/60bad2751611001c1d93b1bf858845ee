package chapter4;

public class Quiz4 {

	public static void main(String[] args) {
		int floor = 5;
		// 4층짜리 피라미드 찍기
		for(int i = 1; i < floor; i++) {
			for(int k = i; k < floor; k++) {
				System.out.print("  ");
			}
			for(int j = 0; j < i; j++) {
				if(j == 0) {
					System.out.print("* ");
				} else {
				System.out.print("* * ");
				}
			}
			System.out.println();
		}
		
		for(int i = 1; i < floor; i++) {
			if(i == 1) {
				continue
			}
			for(int j = 1; j < i; j++) {
				System.out.print(i - j);
			}
			System.out.println();
		}
	}

}
