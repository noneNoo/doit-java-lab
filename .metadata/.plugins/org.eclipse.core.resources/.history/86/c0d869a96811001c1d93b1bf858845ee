package chapter4;

public class Quiz4 {

	public static void main(String[] args) {
		int floor = 5;
		int starCount = 0;
		// 4층짜리 피라미드 찍기
		for(int i = 1; i < floor; i++) {
			for(int k = i; k < floor; k++) {
				System.out.print("  ");
			}
			for(int j = 0; j < i; j++) {
				if(j == 0) {
					System.out.print("* ");
					starCount += 1;
				} else {
				System.out.print("* * ");
				starCount += 2;
				}
			}
			System.out.println();
		}
		
		// 다이아몬드 모양
		for(int i = 1; i < starCount; i++) {
			for(int k = 1; k < i; k++) {
				System.out.print(" ");
			}
			System.out.println(starCount);
		}
	}

}
