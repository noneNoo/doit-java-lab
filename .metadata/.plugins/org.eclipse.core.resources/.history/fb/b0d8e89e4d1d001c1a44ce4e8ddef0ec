package chapter9.gameplay;

public class Player {
	// HAS A CLASS
	private PlayerLevel level;
	private String name;
	
	Player() {
		this("¤¾¤¾");
	}
	
	Player(String name) {
		this.name = name;
		level = new BeginnerLevel();
	}
	
	public String getName() {
		return name;
	}
	
	public PlayerLevel getLevel() {
		return level;
	}
	
	public void setLevel(PlayerLevel level) {
		this.level = level;
	}
	
	public void play(int count, String name) {
		level.go(count,name);
		level.showLevelMessage();
		System.out.println(" ====== ");
	}
}
