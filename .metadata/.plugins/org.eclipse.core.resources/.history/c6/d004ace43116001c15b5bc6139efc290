package chapter6quiz.quiz5;

public class Cafe {
	String name;
	private int money;
	String menuName;
	int price;
	
	
	// 카페 생성자 오버로딩
	Cafe(String name) {
		this(name,0);
	}
	
	Cafe(String name, int money) {
		this.name = name;
		this.money = money;
	}
	
	// 판매 메서드
	public void take(Person person, CafeMenu menu) {
		// 기본 멘트 출력
 		System.out.println(menu.name + "의 가격은 " + menu.price + "원 입니다.");
 		// 만약 돈이 없을 시
		if(person.getMoney() < menu.price) {
	 		System.out.println("손님의 소지금이 부족합니다 ^^;");
		}else {
	 		this.money += menu.price;
		}
	}
	
	public void showInfo() {
		System.out.println();
	}
}
